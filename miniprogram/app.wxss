/**app.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result {
  font-size: 48rpx;
  color: #ff6b6b;
  text-align: center;
  transition: all 0.3s ease;
}

.button {
  width: 80%;
  padding: 20rpx 0;
  background: #ff6b6b;
  color: white;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 40rpx;
  transition: all 0.3s ease;
}

.button:active {
  transform: scale(0.95);
  background: #ff5252;
}